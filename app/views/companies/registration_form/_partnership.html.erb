<%= render layout: 'form', locals: { company: company, type: type } do |f| %>
  <div class="field">
    <%= f.label :name, 'Full name *' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :identification_number, 'Charity Number' %><br>
    <%= f.text_field :identification_number %>
  </div>
  <div class="field">
    <%= f.label :partners, "Names of up to #{Partnership::MAX_PARTNERS} partners" %><br>
    <%= render 'related_people',
               f: f,
               max_items: Partnership::MAX_PARTNERS,
               company: company
               %>
  </div>
<% end %>
